generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String
  email String @unique
  hashedPassword String
  favouriteMovies String[] @db.ObjectId
  type String @default("User")
}

model VerificationToken {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token String @unique
  expires DateTime

  @@unique([identifier,token])

}










model Movie {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  bannerUrl String
  thumbnailUrl String
  genre String[]
  duration String
  releaseYear DateTime

  actors             Actor[] // Brad Pitt, Angelina Jolie
  casts          Cast[] // Adnan Brkic, Adnan Krndzija
}

model Actor {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String
  avatarUrl String

  casts          Cast[] //
  movie              Movie      @relation(fields: [movieId], references: [id])
  movieId            String @db.ObjectId

}


model Cast {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nameInMovie String

  movie                 Movie     @relation(fields: [movieId], references: [id])
  actor                 Actor     @relation(fields: [actorId], references: [id])
  movieId               String @db.ObjectId
  actorId               String @db.ObjectId
}